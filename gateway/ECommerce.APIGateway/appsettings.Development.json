{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },
  "JwtSettings": {
    "SecretKey": "YourStrongKeyHere_ChangeThisToRealKey",
    "Issuer": "ECommerce.Identity.API",
    "Audience": "ECommerce.WebApp",
    "ExpiresInHours": 2,
    "RefreshTokenExpiresInDays": 7
  },
  "ReverseProxy": {
    "Routes": {
      "identity_auth_register": {
        "ClusterId": "identity",
        "Match": { "Path": "/identity/api/auth/register" },
        "Transforms": [
          { "PathRemovePrefix": "/identity" },
          {
            "RequestHeader": "X-Gateway-Auth",
            "Set": "true"
          }
        ]
      },
      "identity_auth_login": {
        "ClusterId": "identity",
        "Match": { "Path": "/identity/api/auth/login" },
        "Transforms": [
          { "PathRemovePrefix": "/identity" },
          {
            "RequestHeader": "X-Gateway-Auth",
            "Set": "true"
          }
        ]
      },
      "identity_auth_forgotpassword": {
        "ClusterId": "identity",
        "Match": { "Path": "/identity/api/auth/forgot-password" },
        "Transforms": [
          { "PathRemovePrefix": "/identity" },
          {
            "RequestHeader": "X-Gateway-Auth",
            "Set": "true"
          }
        ]
      },
      "identity_auth_sendcode": {
        "ClusterId": "identity",
        "Match": { "Path": "/identity/api/auth/send-code" },
        "Transforms": [
          { "PathRemovePrefix": "/identity" },
          {
            "RequestHeader": "X-Gateway-Auth",
            "Set": "true"
          }
        ]
      },
      "identity_protected": {
        "ClusterId": "identity",
        "Match": { "Path": "/identity/api/user/{**catch-all}" },
        "AuthorizationPolicy": "*",
        "Transforms": [
          { "PathRemovePrefix": "/identity" },
          {
            "RequestHeader": "X-Gateway-Auth",
            "Set": "true"
          }
        ]
      },
      "identity_userrole": {
        "ClusterId": "identity",
        "Match": { "Path": "/identity/api/userrole/{**catch-all}" },
        "AuthorizationPolicy": "*",
        "Transforms": [
          { "PathRemovePrefix": "/identity" },
          {
            "RequestHeader": "X-Gateway-Auth",
            "Set": "true"
          }
        ]
      },
      "product": {
        "ClusterId": "product",
        "Match": {
          "Path": "/product/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/product" },
          {
            "RequestHeader": "X-Gateway-Auth",
            "Set": "true"
          }
        ]
      },
      "cart": {
        "ClusterId": "cart",
        "Match": {
          "Path": "/cart/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/cart" },
          {
            "RequestHeader": "X-Gateway-Auth",
            "Set": "true"
          }
        ]
      },
      "order": {
        "ClusterId": "order",
        "Match": {
          "Path": "/order/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/order" },
          {
            "RequestHeader": "X-Gateway-Auth",
            "Set": "true"
          }
        ]
      },
      "payment": {
        "ClusterId": "payment",
        "Match": {
          "Path": "/payment/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/payment" },
          {
            "RequestHeader": "X-Gateway-Auth",
            "Set": "true"
          }
        ]
      },
      "inventory": {
        "ClusterId": "inventory",
        "Match": {
          "Path": "/inventory/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/inventory" },
          {
            "RequestHeader": "X-Gateway-Auth",
            "Set": "true"
          }
        ]
      }
    },
    "Clusters": {
      "identity": {
        "Destinations": {
          "d1": {
            "Address": "http://localhost:5101/"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      },
      "product": {
        "Destinations": {
          "d1": {
            "Address": "http://localhost:5102/"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      },
      "cart": {
        "Destinations": {
          "d1": {
            "Address": "http://localhost:5103/"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      },
      "order": {
        "Destinations": {
          "d1": {
            "Address": "http://localhost:5104/"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      },
      "payment": {
        "Destinations": {
          "d1": {
            "Address": "http://localhost:5105/"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      },
      "inventory": {
        "Destinations": {
          "d1": {
            "Address": "http://localhost:5106/"
          }
        },
        "HttpRequest": {
          "Timeout": "00:00:30"
        }
      }
    }
  }
}
